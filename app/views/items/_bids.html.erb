<%= form_for @bid do |f| %>
<h3>Your Bid</h3>
<%= f.hidden_field :item_id %>
<div class="row collapse">
  <div class="small-2 columns"><span class="prefix">$</span></div>
  <div class="small-10 columns"><%= f.text_field :amount %></div>
</div>
<%= f.submit "Submit Bid!", class: "button success small" %>
<% end %>
</div>
<div class="small-4 columns">
</div>
